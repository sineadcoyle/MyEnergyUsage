= form_for @utility_provider do |f|
  - if @utility_provider.errors.any?
    #error_explanation
      %h2= "#{pluralize(@utility_provider.errors.count, "error")} prohibited this utility_provider from being saved:"
      %ul
        - @utility_provider.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :co2_coefficient
    = f.text_field :co2_coefficient
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit 'Save'
